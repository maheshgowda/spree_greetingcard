<script type='text/template' id='greetingcard_template'>
  <li id='greetingcard_{{ greetingcard.id }}' data-greetingcard-id='{{ greetingcard.id }}' data-taxons="{{ greetingcard.taxon_ids }}" class='greetingcard'>
    <a class="sort-handle js-sort-handle"><span class="icon icon-move"></span></a>
    <div class="btn-group">
      <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu" data-hook="taxon_greetingcard_dropdown">
        <li><a href="javascript:;" class="edit-greetingcard js-edit-greetingcard"><%= Spree.t(:edit) %></a></li>
        <li><a href="javascript:;" class="delete-greetingcard js-delete-greetingcard"><%= Spree.t(:delete_from_taxon) %></a></li>
      </ul>
    </div>
    <div class='image'>
      {{#if greetingcard.image }}
        <img src='{{greetingcard.image}}' alt='{{ greetingcard.name }}' class='thumbnail' />
      {{ else }}
        <img src='<%= image_path("noimage/small.png") %>' alt='{{greetingcard.name }}' class='thumbnail' />
      {{/if}}
    </div>
    <div class="greetingcard-info">
      <div class="name">{{ greetingcard.name }}</div>
      <div class="price">{{ greetingcard.display_price }}</div>
    </div>
  </li>
</script>
