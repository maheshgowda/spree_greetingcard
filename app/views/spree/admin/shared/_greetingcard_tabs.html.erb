<% content_for :page_title do %>
  <%= link_to Spree.t(:greetingcards), admin_greetingcards_path %> /
  <%= @greetingcard.name %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_greetingcard_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_greetingcard_url(@greetingcard) %>
    <% end if can?(:admin, Spree::Greetingcard) %>
    <%= content_tag :li, class: ('active' if current == :images) do %>
      <%= link_to_with_icon 'picture', Spree.t(:images), spree.admin_greetingcard_images_url(@greetingcard) %>
    <% end if can?(:admin, Spree::Image) %>
    <%= content_tag :li, class: ('active' if current == :variants) do %>
      <%= link_to_with_icon 'th-large', Spree.t(:variants),  spree.admin_greetingcard_variants_url(@greetingcard) %>
    <% end if can?(:admin, Spree::Variant) %>
    <%= content_tag :li, class: ('active' if current == :properties) do %>
      <%= link_to_with_icon 'list-alt', Spree.t(:properties), spree.admin_greetingcard_greetingcard_properties_url(@greetingcard) %>
    <% end if can?(:admin, Spree::GreetingcardProperty) %>
    <%= content_tag :li, class: ('active' if current == :stock) do %>
      <%= link_to_with_icon 'home', Spree.t(:stock), stock_admin_greetingcard_url(@greetingcard) %>
    <% end if can?(:stock, Spree::Greetingcard) %>
  </ul>
<% end %>
